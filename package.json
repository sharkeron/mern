{
   "name": "mern",
   "version": "1.0.0",
   "description": "MERN application. Service for shortening links.",
   "main": "server/app.ts",
   "scripts": {
      "start": "cross-env NODE_ENV=production node server/build/app.js",
      "server": "nodemon server/app.ts",
      "client": "npm run start --prefix client",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "server:build": "tsc",
      "client:install": "npm install --prefix client",
      "client:build": "npm run build --prefix client",
      "postinstall": "node-config-ts",
      "heroku-postbuild": "npm run client:install && npm run client:build && npm run server:build"
   },
   "keywords": [
      "mern",
      "react",
      "mongo",
      "node",
      "express"
   ],
   "author": "Striukov Konstantin <sharkeron@gmail.com>",
   "license": "ISC",
   "dependencies": {
      "@types/jsonwebtoken": "^8.5.0",
      "bcryptjs": "^2.4.3",
      "cors": "^2.8.5",
      "cross-env": "^7.0.2",
      "express": "^4.17.1",
      "express-validator": "^6.5.0",
      "helmet": "^3.22.0",
      "jsonwebtoken": "^8.5.1",
      "materialize-css": "^1.0.0-rc.2",
      "module-alias": "^2.2.2",
      "mongoose": "^5.9.16",
      "node-config-ts": "^3.0.4",
      "react-router-dom": "^5.2.0",
      "shortid": "^2.2.15"
   },
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/config": "0.0.36",
      "@types/cors": "^2.8.6",
      "@types/express": "^4.17.6",
      "@types/express-serve-static-core": "^4.17.7",
      "@types/helmet": "0.0.47",
      "@types/mongoose": "^5.7.21",
      "@types/node": "^14.0.6",
      "@types/react-router-dom": "^5.1.5",
      "@types/shortid": "0.0.29",
      "concurrently": "^5.2.0",
      "cross-env": "^7.0.2",
      "nodemon": "^2.0.4",
      "ts-node-dev": "^1.0.0-pre.44",
      "typescript": "^3.9.3"
   },
   "nodemonConfig": {
      "ignore": [
         "client/*"
      ],
      "watch": [
         "server/*"
      ]
   }
}
